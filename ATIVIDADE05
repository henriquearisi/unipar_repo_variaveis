public class ControleEstoque {
    public static void main(String[] args) {
        // Declaração das variáveis para o Smartphone
        String nomeSmartphone = "Smartphone Modelo X";
        String marcaSmartphone = "MarcaX";
        double precoSmartphone = 999.99;
        int quantidadeEstoqueSmartphone = 50;

        // Inicialização do Smartphone
        System.out.println("Dados do Smartphone:");
        System.out.println("Nome: " + nomeSmartphone);
        System.out.println("Marca: " + marcaSmartphone);
        System.out.println("Preço: $" + precoSmartphone);
        System.out.println("Quantidade em Estoque: " + quantidadeEstoqueSmartphone);
        System.out.println();

        // Declaração das variáveis para o Laptop
        String nomeLaptop = "Laptop Modelo Y";
        String marcaLaptop = "MarcaY";
        double precoLaptop = 1499.99;
        int quantidadeEstoqueLaptop = 30;

        // Inicialização do Laptop
        System.out.println("Dados do Laptop:");
        System.out.println("Nome: " + nomeLaptop);
        System.out.println("Marca: " + marcaLaptop);
        System.out.println("Preço: $" + precoLaptop);
        System.out.println("Quantidade em Estoque: " + quantidadeEstoqueLaptop);
        System.out.println();

        // Declaração das variáveis para o Fone de Ouvido Bluetooth
        String nomeFone = "Fone Bluetooth Modelo Z";
        String marcaFone = "MarcaZ";
        double precoFone = 79.99;
        int quantidadeEstoqueFone = 100;

        // Inicialização do Fone de Ouvido Bluetooth
        System.out.println("Dados do Fone de Ouvido Bluetooth:");
        System.out.println("Nome: " + nomeFone);
        System.out.println("Marca: " + marcaFone);
        System.out.println("Preço: $" + precoFone);
        System.out.println("Quantidade em Estoque: " + quantidadeEstoqueFone);
    }
}
